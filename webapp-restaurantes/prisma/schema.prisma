generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// 1. Perfil para cada negocio
model Restaurant {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique // Ej: "pizzeria-napoli" para la URL
  logoUrl     String?
  themeColor  String   @default("#000000") // Para personalizar la web de cada uno
  
  categories  Category[]
  products    Product[]
  tables      Table[]
  orders      Order[]
  
  createdAt   DateTime @default(now())
}

// 2. Categorías de comida (Entrantes, Bebidas, Postres...)
model Category {
  id           String     @id @default(cuid())
  name         String
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  products     Product[]
}

// 3. Los platos o productos
model Product {
  id           String     @id @default(cuid())
  name         String
  description  String?
  price        Float
  imageUrl     String?
  isAvailable  Boolean    @default(true)
  
  categoryId   String
  category     Category   @relation(fields: [categoryId], references: [id])
  
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
}

// 4. Las mesas físicas del local
model Table {
  id           String     @id @default(cuid())
  number       Int
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  orders       Order[]
}

// 5. Las comandas / pedidos
model Order {
  id           String      @id @default(cuid())
  status       String      @default("PENDING") // PENDING, PREPARING, READY, PAID
  total        Float
  
  tableId      String
  table        Table       @relation(fields: [tableId], references: [id])
  
  restaurantId String
  restaurant   Restaurant  @relation(fields: [restaurantId], references: [id])
  
  items        OrderItem[]
  createdAt    DateTime    @default(now())
}

// 6. Ingredientes
model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  quantity  Int
  price     Float   // Guardamos el precio del momento de la compra
}